
<%= form_with model: @product, class: form_class do |f| %>
  <div class= "form-row">
    <div class="form-group col-md-6">
      <%=f.label "Name"%>
      <%=f.text_field :name, required: true, class: "form-control"%>
    </div>
    <div class="form-group col-md-4">
      <%=f.label "Price" %>
      <%=f.number_field :price, :value => math, in: 1.0..1000.0, step: 0.01, required: true, class: "form-control" %>
    </div>
  </div>
  <div class= "form-row">
    <div class="form-check categories">
      <%=f.label "Categories"%>
      <%= collection_check_boxes(:product, :category_ids, Category.all, :id, :name)%>
    </div>
  </div>
  <div class="form-row">
    <div class="form-group col-md-10">
      <%=f.label "Product description" %>
      <%=f.text_field :description, required: true, class: "form-control"%>
    </div>
  </div>
  </div>
  <div class="form-row">
    <div class="form-group col-md-6">
      <%=f.label "Photo URL"%>
      <%=f.text_field :photo_url, required: true, class: "form-control"%>
    </div>
    <div class="form-group col-md-4">
      <%=f.label "Stock"%>
      <%=f.text_field :stock, required: true, class: "form-control"%>
    </div>
  </div>
  <div>
  <%=f.submit action_name, class:"btn btn-info"%>
  </div>
  <% end %>